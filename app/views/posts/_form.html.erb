<%= form_for @post do |f| %>
<%=f.label :title%>
<%= f.text_field :title %><br>
<%=f.label :content%>
<%= f.text_field :content %><br>

    <%=f.fields_for :categories do |c|%>
    <%=c.label "Category Name"%>
    <%=c.text_field :name%>
    <%@categories.each do |category|%>
    <%= check_box_tag(:category_name) %>
<%= label_tag(:category_id, category.name) %>
<%end%>
    <%end%>

<%=f.submit%>
<%end%>
